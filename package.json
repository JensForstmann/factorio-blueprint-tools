{
  "name": "@jensforstmann/factorio-blueprint-tools",
  "version": "1.3.2",
  "description": "JS/TS library for encoding and decoding Factorio blueprint strings (fully typed)",
  "main": "dist/index.js",
  "module": "dist/index.mjs",
  "types": "dist/index.d.ts",
  "scripts": {
    "build": "tsup src/index.ts --format cjs,esm --dts",
    "lint": "tsc",
    "clean": "prettier --write ./src",
    "test": "nyc mocha --timeout 20000 test/**/*.ts",
    "prepare": "npm run build"
  },
  "author": "Jens Forstmann",
  "license": "MIT",
  "dependencies": {
    "buffer": "^6.0.3",
    "pako": "^2.1.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/JensForstmann/factorio-blueprint-tools.git"
  },
  "homepage": "https://github.com/JensForstmann/factorio-blueprint-tools",
  "bugs": {
    "url": "https://github.com/JensForstmann/factorio-blueprint-tools/issues"
  },
  "devDependencies": {
    "@types/chai": "^4.3.9",
    "@types/mocha": "^10.0.3",
    "@types/node": "^20.8.7",
    "@types/pako": "^2.0.2",
    "chai": "^4.3.10",
    "mocha": "^10.2.0",
    "nyc": "^15.1.0",
    "prettier": "^3.0.3",
    "source-map-support": "^0.5.21",
    "ts-node": "^10.9.1",
    "tsup": "^7.2.0",
    "typescript": "^5.2.2"
  },
  "files": [
    "dist/**/*"
  ],
  "mocha": {
    "require": [
      "ts-node/register",
      "source-map-support/register"
    ],
    "extension": [
      "ts"
    ]
  },
  "nyc": {
    "extension": [
      ".ts"
    ],
    "exclude": [
      "test/"
    ],
    "reporter": [
      "text",
      "html"
    ]
  }
}
