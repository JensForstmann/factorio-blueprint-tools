{
  "name": "@jensforstmann/factorio-blueprint-tools",
  "version": "1.3.4",
  "description": "JS/TS library for encoding and decoding Factorio blueprint strings (fully typed)",
  "type": "module",
  "main": "dist/index.js",
  "module": "dist/index.mjs",
  "types": "dist/index.d.ts",
  "scripts": {
    "build": "tsup src/index.ts --format cjs,esm --dts",
    "lint": "tsc",
    "clean": "prettier --write ./src",
    "test": "nyc mocha test/**/*.ts",
    "prepare": "npm run build"
  },
  "author": "Jens Forstmann",
  "license": "MIT",
  "dependencies": {
    "buffer": "^6.0.3",
    "pako": "^2.1.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/JensForstmann/factorio-blueprint-tools.git"
  },
  "homepage": "https://github.com/JensForstmann/factorio-blueprint-tools",
  "bugs": {
    "url": "https://github.com/JensForstmann/factorio-blueprint-tools/issues"
  },
  "devDependencies": {
    "@types/chai": "^5.0.0",
    "@types/mocha": "^10.0.8",
    "@types/node": "^22.7.3",
    "@types/pako": "^2.0.3",
    "chai": "^5.1.1",
    "mocha": "^10.7.3",
    "nyc": "^17.1.0",
    "prettier": "^3.3.3",
    "source-map-support": "^0.5.21",
    "tsup": "^8.3.0",
    "tsx": "^4.19.1",
    "typescript": "^5.6.2"
  },
  "files": [
    "dist/**/*"
  ],
  "mocha": {
    "import": [
      "tsx"
    ],
    "require": [
      "source-map-support/register"
    ],
    "extension": [
      "ts"
    ]
  },
  "nyc": {
    "extension": [
      ".ts"
    ],
    "exclude": [
      "test/"
    ],
    "reporter": [
      "text",
      "html"
    ]
  }
}
